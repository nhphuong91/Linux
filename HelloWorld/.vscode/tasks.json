{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build g++",
            "type": "shell",
            "command": "g++",
            "problemMatcher": [
                "$gcc"
            ],
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceRoot}/RunAndReadFile",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}